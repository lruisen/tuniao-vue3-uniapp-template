{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "/#/*": ["types/*"]
    },
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "types": ["@dcloudio/types"],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "@tuniao/tnui-vue3-uniapp/global.d.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "unpackage", "dist", "**/*.js"]
}
